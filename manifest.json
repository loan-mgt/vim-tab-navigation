{
  "browser_specific_settings": {"gecko": {"id": "{5d5be502-6867-40a4-9bc3-d267cc796e85}"}},
  "manifest_version": 2,
  "name": "Vim Tab Navigator",
  "version": "1.3",
  "description": "Vim-style tab navigation",
  "icons": {
    "48": "static/logo.png",
    "128": "static/logo.png"
  },
  
  "permissions": [
    "activeTab",
    "<all_urls>",
    "tabs"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "commands": {
    "ctrl-y-shortcut": {
      "suggested_key": {
        "default": "Ctrl+Y"
      },
      "description": "Navigate to previous tab"
    },
    "ctrl-e-shortcut": {
      "suggested_key": {
        "default": "Ctrl+E"
      },
      "description": "Navigate to next tab"
    }
  },
  "custom_license": {
    "name": "GPL-3.0",
    "url": "https://www.gnu.org/licenses/gpl-3.0.html"
  }
}
